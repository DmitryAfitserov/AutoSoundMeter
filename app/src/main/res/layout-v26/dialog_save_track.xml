<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_layout"
    android:background="@color/grey_background">

    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_is_delete"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/write_name_track">

    </TextView>

    <TextView
        android:id="@+id/text_view_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_is_delete"
        android:layout_marginTop="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/alert_name_is_empty"
        android:textColor="@color/colorRed">

    </TextView>

    <EditText
        android:background="@drawable/border"
        android:id="@+id/edit_text_name_save"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/text_view_alert"
        android:inputType="text"
        android:labelFor="@+id/edit_text_name_save"
        android:autofillHints="@string/name_save"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:layout_below="@+id/edit_text_name_save"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            style="@style/style_btn"

            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel_save_track"
            android:text="@string/button_cancel"
            android:layout_marginEnd="40dp">


        </Button>

        <Button
            style="@style/style_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_track"
            android:text="@string/button_save">


        </Button>


    </LinearLayout>


</RelativeLayout>